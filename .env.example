# LLM Provider Configuration
# Choose: 'openai' (default) or 'anthropic'
LLM_PROVIDER=openai

# OpenAI API Configuration (default provider)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Configuration (alternative provider)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure Deployment Configuration (optional, for Phase 6h)
# Required for Azure deployment tools
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-service-principal-client-id-here
AZURE_CLIENT_SECRET=your-service-principal-client-secret-here

# Optional Azure Configuration
AZURE_RESOURCE_GROUP=acia-deployments
AZURE_LOCATION=eastus

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# E2E Testing Flags (set to 'true' to enable)
# RUN_E2E_TESTS=true
